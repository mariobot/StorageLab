<Window x:Class="WpfAppFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="back" HorizontalAlignment="Left" Height="100" Margin="69,44,0,0" VerticalAlignment="Top" Width="100" Source="{Binding ActualHeight, ElementName=back, Mode=OneWay}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="244,83,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
